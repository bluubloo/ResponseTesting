<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/multi_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/title_style"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/multi_group_name" >

        <ImageView
            android:id="@+id/multi_group_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="@string/image_descript"
            android:focusable="false" />
        
       <ImageView
            android:id="@+id/multi_group_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@android:drawable/ic_menu_set_as"
            android:contentDescription="@string/image_descript"
            android:focusable="false" />
        <ImageView
            android:id="@+id/multi_group_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="@string/image_descript"
            android:focusable="false" />

    </LinearLayout>

</RelativeLayout>
