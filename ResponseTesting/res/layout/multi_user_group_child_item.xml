<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/multi_group_name"
        style="@style/title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/multi_group_name" >

        <ImageView
            android:id="@+id/multi_group_settings"
            style="@style/multi_images"
            android:contentDescription="@string/image_descript"
            android:src="@drawable/ic_settings" />

        <ImageView
            android:id="@+id/multi_group_move"
            style="@style/multi_images"
            android:contentDescription="@string/image_descript"
            android:src="@drawable/ic_move" />

        <ImageView
            android:id="@+id/multi_group_remove"
            style="@style/multi_images"
            android:contentDescription="@string/image_descript"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

</RelativeLayout>