<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/results_dis_title"
        style="@style/palatino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/results_dis_title" />

     <Button
        android:id="@+id/results_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/results_dis_graphs"
        android:layout_marginBottom="10dp" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/results_plot"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        androidPlot.domainLabel="Domain"
        androidPlot.domainLabelWidegt.labelPaint.textSize="@dimen/domain_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_font_size"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_font_size"
        androidPlot.graphWidget.gridLinePaint.color="@color/Black"
        androidPlot.graphWidget.marginBottom="50dp"
        androidPlot.graphWidget.marginLeft="30dp"
        androidPlot.graphWidget.marginRight="10dp"
        androidPlot.graphWidget.marginTop="20dp"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_font_size"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_font_size"
        androidPlot.legendWidget.heightMetric.value="25dp"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="15dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_center"
        androidPlot.legendWidget.textPaint.textSize="@dimen/legend_font_size"
        androidPlot.rangeLabel="Range"
        androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_font_size"
        androidPlot.title="Results - Event"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size" />



</LinearLayout>