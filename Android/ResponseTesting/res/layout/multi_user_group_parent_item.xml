<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp" >

        <ImageView
            android:id="@+id/multi_group_icon"
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_descript"
            android:src="@drawable/uni_logo" />

        <TextView
            android:id="@+id/multi_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/multi_group_icon"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title_container"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/multi_group_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_mode_add"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:focusable="false" />
    </RelativeLayout>

</RelativeLayout>